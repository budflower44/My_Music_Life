<mapper namespace="com.mml.www.repository.CommentDAO">
	
	<insert id="insertComment">
		insert into comment(id, writer, content) value(#{id}, #{writer}, #{content})
	</insert>
	
	<select id="getComment">
		select * from comment where id=#{id}
	</select>
	
</mapper>